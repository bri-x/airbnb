<%= form_for(@listing) do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="text-field">
    <%= f.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10"><%= f.text_field :name, class: "form-control" %></div>
  </div>

  <div classs="text-area">
    <%= f.label :description, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10"><%= f.text_area :description, class: "form-control" %></div>
  </div>

  <div class="text-field">
    <%= f.label :property_type, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
    <%= f.select :property_type, options_for_select(Listing::PROPERTY_TYPES), class: "form-control" %>
    </div>
  </div>

  <div class="text-field">
    <%= f.label :room_type, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <% Listing::ROOM_TYPES.each do |r| %>
        <%= f.radio_button :room_type, r %>
        <%= f.label :room_type, r %>
      <% end %>
    </div>

  </div>

  <div class="text-field">
    <%= f.label :no_guest, "Number of guests", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10"><%= f.number_field :no_guest, class: "form-control", min: "1", max: "30" %></div>
  </div>

  <div class="text-field">
    <%= f.label :price, "Price (per night)", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10"><%= f.text_field :price, class: "form-control" %></div>
  </div>

  <div class="text-field">
    <%= f.label :min_stay, "Minimum stay", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10"><%= f.number_field :min_stay, class: "form-control", min: "1" %></div>
  </div>

  <div class="text-field">
    <%= f.label :address, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10"><%= f.text_field :address, class: "form-control" %></div>
  </div>

  <div class="select-field">
    <%= f.label :city, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
    <%= f.select :city_id, City.all.collect {|p| [ "#{p.name}, #{p.state}, #{p.country}", p.id ] }, class: "form-control" %>
    </div>
  </div>

  <div class="text-field">
  <%= f.label :amenities, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
    <% Listing::AMENITIES.each do |a| %>
    <%= check_box_tag 'listing[amenity][]', a %>
    <%= label_tag "amenity_#{a.tr(' ', '')}", a %>
    <% end %>
    
    </div>
  </div>

  <div class="text-field">
  <%= f.label :rules, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
    <% Listing::RULES.each do |a| %>
    <%= check_box_tag 'listing[rule][]', a %>
    <%= label_tag "rule_#{a.tr(' ', '')}", "Allow #{a.downcase}" %><br/>
    <% end %>
  </div>

  <%= f.label :avatars, "Upload images", class: "col-sm-2 col-form-label" %>
   <div class="col-sm-10">
    <%= f.file_field :avatars, multiple: true %>
    </div>
    
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
