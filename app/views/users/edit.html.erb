<div class="sign-up col-lg-6 col-xs-12">

  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      <h2>Edit your information</h2>
    </div>
  </div>

  <%= form_for @user do |form| %>
    <%= render partial: '/users/form', object: form %>

      <div class="form-group row">
    <%= form.label :avatar, "Profile picture", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <% if @user.avatar? %>
        <%= image_tag(@user.avatar.thumb.url) %>
       <label>
          <%= form.check_box :remove_avatar %>
          Remove avatar
        </label>
      <% end %>
      <%= form.file_field :avatar %>
      <%= form.hidden_field :avatar_cache %>
    </div>
  </div>
  
    <%= form.submit "Update", class: "btn btn-primary" %><br/><br/>
  <% end %>

</div>

<%= button_to 'Delete this account', user_path, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>

<%= form_for :password, url: passwords_path do |form| %>
    <%= form.hidden_field :email, value: current_user.email %>
    <%= form.submit %>
<% end %>

