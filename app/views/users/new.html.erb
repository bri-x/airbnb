<div id="clearance" class="sign-up col-lg-3 col-md-4 col-sm-8 col-xs-12">

  <h2><%= t(".title") %></h2>

  <%= form_for @user do |form| %>

    <%= render partial: '/users/form', object: form %>
    <div class="clearance-label"><%= form.label :password %></div>
    <%= form.password_field :password, class: "form-control"%>
    <br/>
    <div class="clearance-button">
    <%= form.submit "Sign up", class: "btn btn-default btn-lg"%></div><br/><br/>

  <% end %>

  <div class="other-links">
		<%= link_to t(".sign_in"), sign_in_path %>
	
    <%= button_to "", "/auth/facebook", class: "button-with-fb btn btn-primary" %>
  </div>
</div>

