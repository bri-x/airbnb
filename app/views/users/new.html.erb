<div id="clearance" class="sign-up col-lg-6 col-xs-12">

  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      <h2><%= t(".title") %></h2>
    </div>
  </div>

  <%= form_for @user do |form| %>

    <%= render partial: '/users/form', object: form %>

     <%= form.submit "Sign up", class: "btn btn-primary" %><br/><br/>

		<div class="other-links">
		  <%= button_to "Sign up with Facebook", "/auth/facebook", class: "btn btn-primary" %><br/><br/>
		  <%= link_to t(".sign_in"), sign_in_path %>
		</div>
	<% end %>
</div>


